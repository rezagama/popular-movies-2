<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="review"
            type="String" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@{name}"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:drawablePadding="@dimen/dimen_padding_default"
            android:drawableLeft="@mipmap/ic_launcher_round"
            android:drawableStart="@mipmap/ic_launcher_round"
            android:padding="@dimen/dimen_padding_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:text = "Reza"/>
        <TextView
            android:text="@{review}"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:paddingLeft="@dimen/dimen_padding_default"
            android:paddingRight="@dimen/dimen_padding_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:text = "Movie is awesome!"/>
    </LinearLayout>
</layout>